<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/partner_logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="16dp"
            tools:srcCompat="@drawable/nasa" />

        <TextView
            android:id="@+id/partner_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_toEndOf="@+id/partner_logo"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/text_color_primary"
            android:textSize="18sp"
            tools:text="NASA"/>

        <TextView
            android:id="@+id/extra_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/partner_name"
            android:layout_toEndOf="@+id/partner_logo"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif"
            android:textColor="@color/text_color_secondary"
            android:textSize="16sp"/>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ma_divider_thickness_light"
            android:layout_below="@id/partner_logo"
            android:background="@color/divider_color"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"/>


        <TextView
            android:id="@+id/partner_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_below="@+id/divider"
            android:fontFamily="sans-serif"
            android:textSize="16sp"
            android:textColor="@color/text_color_primary"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>