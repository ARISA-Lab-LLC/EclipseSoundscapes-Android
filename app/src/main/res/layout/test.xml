<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.eclipsesoundscapes.eclipsesoundscapes.fragments.EclipseCenterFragment"
    android:background="@drawable/custom_background">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <TextView
            android:id="@+id/countdown_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:text="Countdown Until Eclipse"/>


        <TextView
            android:id="@+id/countdown_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/countdown_title"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textAllCaps="true"
            android:text="Days"/>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/countdown_title"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:fontFamily="sans-serif-smallcaps"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:text="3"/>

            <TextView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:fontFamily="sans-serif-smallcaps"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:text="3"/>

            <TextView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="8dp"
                android:gravity="center"
                android:fontFamily="sans-serif-smallcaps"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:text="3"/>

            <TextView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:fontFamily="sans-serif-smallcaps"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:text="3"/>


            <TextView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="8dp"
                android:gravity="center"
                android:fontFamily="sans-serif-smallcaps"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:text="3"/>

            <TextView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:fontFamily="sans-serif-smallcaps"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:text="3"/>

            <TextView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="8dp"
                android:gravity="center"
                android:fontFamily="sans-serif-smallcaps"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:text="3"/>


            <TextView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:fontFamily="sans-serif-smallcaps"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:text="3"/>
        </LinearLayout>

    </RelativeLayout>



</RelativeLayout>
