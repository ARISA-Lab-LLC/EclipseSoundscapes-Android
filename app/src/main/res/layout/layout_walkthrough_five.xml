<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/text_color_primary"
        android:textSize="21sp"
        android:text="@string/walkthrough_location_page"
        android:contentDescription="@string/walkthrough_title_access"
        android:focusable="true"


        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_above="@+id/button_location"
        android:src="@drawable/eclipse_soundscapes_logo"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:importantForAccessibility="no"

        app:layout_constraintBottom_toTopOf="@+id/message"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/walkthrough_location_permission"
        android:gravity="center"
        android:fontFamily="sans-serif"
        android:textSize="16sp"
        android:textColor="@color/text_color_primary"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"


        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/button_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:drawableStart="@drawable/ic_map_marker"
        android:padding="16dp"
        android:textColor="@android:color/white"
        android:text="Continue"
        android:textStyle="bold"
        android:contentDescription="@string/location_permission"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"

        app:layout_constraintTop_toBottomOf="@+id/message" />

    <Button
        android:id="@+id/button_ask_later"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_location"
        android:background="@android:color/transparent"
        android:layout_marginTop="4dp"
        android:padding="16dp"
        android:textColor="@color/colorAccent"
        android:text="@string/walkthrough_ask_later"
        android:contentDescription="@string/walkthrough_ask_later"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"

        app:layout_constraintTop_toBottomOf="@+id/button_location" />


    <TextView
        android:id="@+id/current_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_ask_later"
        android:layout_alignEnd="@+id/button_ask_later"
        android:layout_marginBottom="4dp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        android:text="Page 5 of 5"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"

        app:layout_constraintTop_toBottomOf="@+id/button_ask_later"
        app:layout_constraintRight_toRightOf="parent" />



</android.support.constraint.ConstraintLayout>